@{
    ViewData["Title"] = "List Staffs";
}
<div class="text-center">
    <h1 style="font-size: 4vw;">@ViewData["Title"]</h1>
</div>

<div class="wrapper">
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Staff Id</th>
                    <th scope="col">Staff Name</th>
                </tr>
            </thead>
            @foreach (var item in ViewBag.model)
            {
                <tbody>
                    <tr>
                        <td>@item.StaffId</td>
                        <td>@item.StaffName</td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
</div>

