@{
    ViewData["Title"] = "Staff Operations";
}
<div class="text-center">
    <h1 style="font-size: 4vw;">@ViewData["Title"]</h1>
</div>

<div class="position-absolute top-50 start-50 translate-middle ">
    <a asp-action="ListStaffs" asp-controller="Staff" class="btn btn-primary btn-lg"
       style="height: max-content">
        List Staffs
    </a>
    <a asp-action="AddStaff" asp-controller="Staff" class="btn btn-primary btn-lg"
       style="height: max-content">
        Add Staff
    </a>
</div>
