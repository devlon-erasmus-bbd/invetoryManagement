@{
    ViewData["Title"] = "Customer Operations";
}
<div class="text-center">
    <h1 style="font-size: 4vw;">@ViewData["Title"]</h1>
</div>

<div class="position-absolute top-50 start-50 translate-middle ">
    <a asp-action="ListCustomers" asp-controller="Customers" class="btn btn-primary btn-lg"
       style="height: max-content">
        List Customers
    </a>
    <a asp-action="AddCustomer" asp-controller="Customers" class="btn btn-primary btn-lg"
       style="height: max-content">
        Add Customer
    </a>
    <a asp-action="BuyItems" asp-controller="Customers" class="btn btn-primary btn-lg"
       style="height: max-content">
        Buy Items
    </a>
    <a asp-action="ListTransactions" asp-controller="Customers" class="btn btn-primary btn-lg"
       style="height: max-content">
        List Transactions
    </a>
</div>
