@model inveroryManagerApp.Models.OrderModel
@{
    ViewData["Title"] = "Check Order Status";
}
<div class="text-center">
    <h1 style="font-size: 4vw;">@ViewData["Title"]</h1>
    <p1 style="font-size: 1vw;">Please Enter Order ID</p1>
</div>

@using (Html.BeginForm("DisplayOrderStatus", "Orders", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row">
            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Order ID</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.OrderId, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(model => model.OrderId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>

    </div>
}

